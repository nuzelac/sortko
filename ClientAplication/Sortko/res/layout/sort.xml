<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#272626">

<ImageView android:id="@+id/logo"
	android:layout_alignParentLeft="true"
	android:src="@drawable/sortko"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:paddingTop="10px"
    android:paddingLeft="10px">
</ImageView>

<TextView android:id="@+id/sortpoints"
	android:layout_alignParentRight="true"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:paddingTop="10px"
    android:paddingRight="10px"
    android:textStyle="bold"
    android:textSize="32px"
    android:textColor="#fff"
    android:text="0"
    />

<TextView android:id="@+id/sortname"
	android:layout_below="@+id/logo"  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:paddingTop="10px"
    android:paddingLeft="10px"
    android:textStyle="bold"
    android:textSize="24px"
    android:textColor="#fff"
    android:text="@string/sort_name"
    />

<ImageView android:id="@+id/changeSort"
	android:layout_toRightOf="@+id/sortname"
	android:src="@drawable/change_sort"
	android:layout_alignBottom="@+id/sortname"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:paddingTop="10px"
    android:paddingLeft="10px">
</ImageView>
    
<TextView android:id="@+id/sortHelpMessage"
	android:layout_below="@+id/sortname"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:maxLines="2"
    android:paddingTop="25px"
    android:paddingLeft="12px"
    android:textStyle="bold"
    android:textSize="16px"
    android:text="@string/sortHelpMessage"
    />
    
<LinearLayout
    android:id="@+id/buttonlist"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="180px"
    android:layout_marginLeft="5px"
    android:layout_marginRight="5px"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    >
</LinearLayout>

<Button android:id="@+id/helpvariable"
	android:layout_below = "@+id/buttonlist"
	android:layout_alignParentRight = "true"
	android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
	android:background="@drawable/normal_button"
	android:visibility="invisible"
	android:textSize="26px"
	android:textColor="#ffffff"
	android:textStyle ="bold"
	android:layout_margin ="15px">
</Button>

</RelativeLayout>